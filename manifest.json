{
  "manifest_version": 3,
  "name": "Auto Scroll Controller",
  "version": "1.1.0",
  "description": "Toggle 30-second auto-scroll and detect Telus Productivity alert.",
  "permissions": [
    "storage",
    "tabs"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
